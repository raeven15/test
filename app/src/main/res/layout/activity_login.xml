<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raeven.guidance.DashboardActivity">

    <TextView
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/editText_studentNumber"
        android:layout_alignLeft="@+id/editText_studentNumber"
        android:layout_alignStart="@+id/editText_studentNumber"
        android:layout_alignRight="@+id/editText_studentNumber"
        android:layout_alignEnd="@+id/editText_studentNumber" />

    <EditText
        android:layout_width="271dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText_studentNumber"
        android:layout_marginBottom="29dp"
        android:background="@drawable/rounded_edittext"
        android:layout_above="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/editText_password"
        android:layout_alignLeft="@+id/editText_studentNumber"
        android:layout_alignStart="@+id/editText_studentNumber"
        android:layout_alignRight="@+id/editText_studentNumber"
        android:layout_alignEnd="@+id/editText_studentNumber" />

    <Button
        android:text="Login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="councilorCheck"
        tools:background="#FCBF17 "
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_marginBottom="112dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="271dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="20"
        android:id="@+id/editText_password"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@mipmap/ic_guidance"
        android:id="@+id/imageView4"
        android:layout_above="@+id/textView22"
        android:layout_alignRight="@+id/textView22"
        android:layout_alignEnd="@+id/textView22" />

    <Button
        android:text="Register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="registerAccount"
        tools:background="#FCBF17 "
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_below="@+id/textView24"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Don't have an account? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/textView24"
        android:layout_below="@+id/editText_password"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />


</RelativeLayout>
